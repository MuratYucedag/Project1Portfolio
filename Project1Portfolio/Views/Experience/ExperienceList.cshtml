@model List<Project1Portfolio.Models.Experience>

@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Deneyimlerim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Şirket</th>
        <th>Tarih</th>
        <th>Unvan</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.CompanyName</td>
            <td>@item.WorkDate</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Experience/CreateExperience/" class="btn btn-info">Yeni Deneyim Girişi</a>

